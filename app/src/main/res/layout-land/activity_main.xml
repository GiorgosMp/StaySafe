<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bLogIn"
        android:layout_width="205dp"
        android:layout_height="72dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="110dp"
        android:onClick="logIn"
        android:text="LOG IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bSignUp"
        app:layout_constraintStart_toStartOf="@+id/bFPass"
        app:layout_constraintTop_toTopOf="@+id/editTPass" />

    <Button
        android:id="@+id/bSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="16dp"
        android:onClick="signUp"
        android:text="New User?Sign up now."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bFPass" />

    <Button
        android:id="@+id/bFPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="16dp"
        android:onClick="forgetPassword"
        android:text="Did you forget your password?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTEmail"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTPass"
        app:layout_constraintEnd_toEndOf="@+id/editTPass"
        app:layout_constraintStart_toStartOf="@+id/editTPass"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTPass"
        android:layout_width="271dp"
        android:layout_height="72dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>